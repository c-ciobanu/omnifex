{
  "name": "@omnifex/db",
  "private": true,
  "type": "module",
  "exports": {
    ".": "./src/index.ts",
    "./env": "./env.ts"
  },
  "scripts": {
    "clean": "git clean -xdf .cache .turbo dist node_modules",
    "format": "prettier --check . --ignore-path ../../.gitignore --ignore-path .prettierignore",
    "lint": "eslint --flag unstable_native_nodejs_ts_config",
    "typecheck": "tsc --noEmit",
    "migrate": "pnpm with-env prisma migrate dev",
    "studio": "pnpm with-env prisma studio",
    "watch": "docker compose up",
    "with-env": "dotenv -e ../../.env --"
  },
  "dependencies": {
    "@prisma/adapter-pg": "catalog:prisma",
    "@prisma/client": "catalog:prisma",
    "@t3-oss/env-core": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@omnifex/eslint-config": "workspace:*",
    "@omnifex/prettier-config": "workspace:*",
    "@omnifex/tsconfig": "workspace:*",
    "@types/node": "catalog:",
    "eslint": "catalog:eslint",
    "prettier": "catalog:",
    "prisma": "catalog:prisma",
    "typescript": "catalog:"
  },
  "prettier": "@omnifex/prettier-config"
}
