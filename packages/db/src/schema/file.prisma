model File {
  id          String @id @default(uuid())
  name        String
  key         String @unique
  contentType String
  contentSize Int

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String

  @@unique([userId, name])
}
