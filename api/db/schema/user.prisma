model User {
  id                  Int       @id @default(autoincrement())
  email               String?   @unique
  username            String    @unique
  hashedPassword      String
  salt                String
  resetToken          String?
  resetTokenExpiresAt DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  metrics    Metric[]
  documents  Document[]
  movieLists MovieList[]
  showLists  ShowList[]
  bookLists  BookList[]
  workouts   Workout[]
}
